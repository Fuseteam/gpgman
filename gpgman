#!/bin/bash
SCRP_DIR=$(dirname "${BASH_SOURCE[0]}")
source $SCRP_DIR/crackle.conf

download_gpgman(){
	echo "downloading latest version"
	wget -q https://github.com/${maintainer}/${name}/releases/latest/download/${name}.zip -O $HOME/Downloads/${name}.zip
}

unzip_gpgman() {
	echo "unpacking..."
	unzip -q $HOME/Downloads/${name}.zip -d $HOME/${name}
}

install_gpgman(){
	mkdir -p ${prefix}/bin
	mkdir -p ${prefix}/lib
	mkdir -p ${comprefix}
	chmod 755 ${SCRP_DIR}/bin/*
	cp -f $SCRP_DIR/bin/* ${prefix}/bin
}
remove_gpgman(){
	rm -f ${prefix}/bin/gpgman\
	      ${prefix}/bin/awkeygrip\
	      ${prefix}/bin/secawk
}
if [ "$1" = "setup" ]; then
	install_gpgman;
	rm -r $HOME/gpgman;
	rm -r $HOME/Downloads/gpgman.zip;
fi
